@model ConferenceManagerExampleApp.Models.ViewModels.SubjectCategoryViewModel

@{
    ViewData["Title"] = "Manage the subject categories";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="panel panel-default room-category-panel">
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Remove subject category</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.SubjectCategoryModels)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Description</td>
                <td>
                    <form asp-area="" asp-controller="SubjectCategory" asp-action="RemoveSubjectCategory" method="post">
                        <input type="checkbox" class="remove-checkbox"/>
                        <input type="hidden" name="id" value="@category.Id"/>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="panel-footer add-room-category-form">
        <button type="button" class="btn btn-primary"><a class="text-white" asp-controller="SubjectCategory" asp-action="AddSubjectCategory">Add subject category</a></button>
    </div>
</div>