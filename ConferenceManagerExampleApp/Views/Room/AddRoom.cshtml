@model ConferenceManagerExampleApp.Models.BindingModels.RoomBindingModel

<form asp-area="" asp-controller="Room" asp-action="AddRoom" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomCategoryId">Description</label>
        <select class="form-control" asp-for="RoomCategoryId" asp-items="@Model.RoomCategoryDescription">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="RoomCategoryId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Add</button>
</form>