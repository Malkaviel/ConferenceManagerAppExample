@model ConferenceManagerExampleApp.Models.BindingModels.SessionBindingModel

<form asp-area="" asp-controller="Session" asp-action="AddSession" method="post">
    <div class="form-group">
         <label asp-for="Title">Title:</label>
        <input class="form-control" asp-for="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpeakerId">Speaker</label>
        <select class="form-group" asp-for="SpeakerId" asp-items="@Model.SpeakerNames">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="SpeakerId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Add</button>
</form>