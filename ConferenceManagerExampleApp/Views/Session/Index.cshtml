@using ConferenceManagerExampleApp.Models.Domains
@model ConferenceManagerExampleApp.Models.ViewModels.SessionViewModel

@{
    ViewData["Title"] = "Manage the sessions";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="panel panel-default room-category-panel">
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Speaker</th>
            <th scope="col">Remove session</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var session in Model.SessionModels)
        {
            <tr>
                <th scope="row">@session.Id</th>
                <td>@session.Title</td>
                <td>@session.SpeakerModel.FirstName @session.SpeakerModel.LastName</td>
                <td>
                    <form asp-area="" asp-controller="Session" asp-action="RemoveSession" method="post">
                        <input type="checkbox" class="remove-checkbox"/>
                        <input type="hidden" name="id" value="@session.Id"/>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="panel-footer add-room-category-form">
        <button type="button" class="btn btn-primary"><a class="text-white" asp-controller="Session" asp-action="AddSession" asp-area="">Add a session</a></button>
    </div>
</div>