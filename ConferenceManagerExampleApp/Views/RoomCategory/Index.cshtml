@model ConferenceManagerExampleApp.Models.ViewModels.RoomCategoryViewModel

@{
    ViewData["Title"] = "Manage the room categories";
}

<div class="panel panel-default room-category-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Max capacity</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.RoomCategories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Description</td>
                <td>@category.MaxCapacity</td>
            </tr>
        }
        </tbody>
    </table>
    
    <div class="panel-footer add-room-category-form">
        <!-- TODO -->
    </div>
</div>