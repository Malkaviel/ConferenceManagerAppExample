@model ConferenceManagerExampleApp.Models.BindingModels.SpeakerBindingModel

<form asp-area="" asp-controller="Speaker" asp-action="AddSpeaker" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input class="form-control" asp-for="FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input class="form-control" asp-for="LastName"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input class="form-control" asp-for="Email" type="email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input class="form-control" asp-for="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>    

    <div class="form-group">
        <label asp-for="SubjectId">Subject</label>
        <select class="form-control" asp-for="SubjectId" asp-items="@Model.SubjectTitles">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>    
    
    <button type="submit" class="btn btn-primary">Add</button>
</form>